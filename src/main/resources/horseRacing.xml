<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="horse1" class="org.example.entities.Horse"/>
    <bean name="horse2" class="org.example.entities.Horse"/>
    <bean name="horse3" class="org.example.entities.Horse"/>

    <bean name="rider1" class="org.example.entities.Rider"/>
    <bean name="rider2" class="org.example.entities.Rider"/>
    <bean name="rider3" class="org.example.entities.Rider"/>

    <bean lazy-init="true" name="racing" class="org.example.services.RacingImpl"/>

    <bean lazy-init="true" name="pair1" class="org.example.entities.Pair" init-method="init"/>
    <bean lazy-init="true" name="pair2" class="org.example.entities.Pair" init-method="init"/>
    <bean lazy-init="true" name="pair3" class="org.example.entities.Pair" init-method="init"/>





</beans>